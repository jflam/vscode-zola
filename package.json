{
  "name": "vscode-zola",
	"displayName": "vscode-zola",
	"description": "VS Code extensions for writing a blog using zola",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:/config.toml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-zola.blockSelection",
				"title": "Zola: Block Selection"
			},
			{
				"command": "vscode-zola.openTodayPost",
				"title": "Zola: Open Today's Post"
			},
			{
				"command": "vscode-zola.pasteSpecial",
				"title": "Zola: Paste Special"
			},
			{
				"command": "vscode-zola.previewBlog",
				"title": "Zola: Preview Blog"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
